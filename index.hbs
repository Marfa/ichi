    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}}">
        {{#if image}}
            <a href="{{url}}"><img src="{{image}}"></a>
        {{/if}}
        <div>
        <header class="post-header">
            <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> </span>
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>

        </header>
            <section class="post-excerpt">
                <p>{{excerpt characters="400"}}&hellip;</p>
            </section>
            <a class="button read-more right small" href="{{url}}">Читать дальше</a>
            {{#if tags}}
            <aside class="tags fi-pricetag-multiple">{{tags prefix="Опубликовано в "}}</aside>
            {{else}}
            <aside class="tags fi-pricetag-multiple">Нет тегов</aside>
            {{/if}}
            <div class="clearfix"></div>
        </div>
    </article>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
